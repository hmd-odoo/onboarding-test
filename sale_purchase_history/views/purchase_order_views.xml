<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_properties_extension" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.history</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"  />
        <field name="arch" type="xml">
             <xpath expr="//button[@name='action_create_invoice']" position="after">
                    <button name="action_view_history" type="object" string="View History" context="{'is_purchase':True}"/>
            </xpath>
        </field>
    </record>
</odoo>
