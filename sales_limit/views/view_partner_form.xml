<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_partner_form_limit_inherit" model="ir.ui.view">
        <field name="name">view.partner.form.limit.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position = 'after'>
                <field name="sale_order_limit" string='Sale Limit' readonly = 'False' />
                <field name="sale_order_limit_used" string='Sale Limit Remaining' />
            </xpath>
        </field>
    </record>

</odoo>