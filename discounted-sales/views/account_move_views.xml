<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_order_view_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='discount']" position='after'>
                <field name='discount_amount' string='Discount Amount'></field>
            </xpath>
        </field>
    </record>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_discount']" position="after">
            <th name="th_discountnum" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Discount Amount</span></th>
        </xpath>

        <xpath expr="//td[@name='td_discount']" position="after">
            <td name="td_discountnum" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span class="text-nowrap" t-field="line.discount_amount">0</span>
            </td>
        </xpath>

        <xpath expr="//t[@t-set='tax_totals']" position="before">
            <tr class="border-black o_subtotal">
                <td><strong>Total Dicsounted Amount</strong></td>

                <td class="text-end">
                    <span
                        t-att-class="oe_subtotal_footer_separator"
                        t-out="total_discount_amount"
                    >27.00</span>
                </td>
            </tr>
        </xpath>

        
    </template>

</odoo>